<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.atelier.mapper.BucketMapper">
    <insert id="addBucket" parameterType="com.example.atelier.domain.Bucket">
        insert into t_buckets (pid,uid, total_price, quantity ,bucket_url)
        values
         (#{pid},#{uid}, #{totalPrice}, #{quantity} ,#{bucketUrl});
    </insert>
    <select id="bucketList" resultMap="Bucket">
        SELECT
            *
        FROM t_buckets where uid=#{uid};
    </select>

    <resultMap id="Bucket" type="com.example.atelier.domain.Bucket">
        <result property="uid" column="uid"/>
        <result property="pid" column="pid"/>
        <result property="bno" column="bno"/>
        <result property="totalPrice" column="total_price"/>
        <result property="bucketUrl" column="bucket_url"/>
        <result property="quantity" column="quantity"/>
    </resultMap>

</mapper>